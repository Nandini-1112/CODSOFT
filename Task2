#include <iostream>

int main() {
    double a, b;
    char ch;

    std::cout << "Enter first number: ";
    std::cin >> a;

    std::cout << "Enter an operator (+, -, *, /): ";
    std::cin >> ch;

    std::cout << "Enter second number: ";
    std::cin >> b;

    switch(ch) {
        case '+':
            std::cout << "Result: " << a + b << "\n";
            break;
        case '-':
            std::cout << "Result: " << a - b << "\n";
            break;
        case '*':
            std::cout << "Result: " << a * b << "\n";
            break;
        case '/':
